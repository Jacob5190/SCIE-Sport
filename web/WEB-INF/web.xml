<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">
    <welcome-file-list>
        <welcome-file>task_management.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>receive</servlet-name>
        <servlet-class>receiveFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>receive</servlet-name>
        <url-pattern>/receive</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>deleteFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>adminDelete</servlet-name>
        <servlet-class>deleteTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminDelete</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>createTask</servlet-name>
        <servlet-class>createTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createTask</servlet-name>
        <url-pattern>/createTask</url-pattern>
    </servlet-mapping>
</web-app>
